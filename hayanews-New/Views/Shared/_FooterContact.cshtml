@using System.Web.Mvc.Html
@using Comman.Helpers
@using Models
@using Resources
@using Resources.App_GlobalResources
@model ContactUsModel

<form action="@Url.Action("AjaxContactUs", "Home")" method="POST">
    <div class="col-md-8 col-xs-12 col-sm-8">
        <div class="input-field col-md-6 col-xs-12 col-sm-6">
            @*<input id="inputname" type="text" class="wpcf7-form-control inputText form-control dr-ltr" aria-required="true" aria-invalid="true">
            <label for="inputname" class="">نام و نام خانوادگی*</label>
            <span class="field-validation-valid">لطفا نام خود را وارد کنید</span>*@

            @Html.TextBoxFor(x => x.Name, new { id = "inputname", @class = "wpcf7-form-control inputText form-control dr-ltr", required = "required"})
            <label for="inputname" class="">*@ResourceLocalization.GetResource(() => Resource.Name)</label>
            @Html.ValidationMessageFor(x=>x.Name)

        </div>
        <div class="input-field col-md-6 col-xs-12 col-sm-6">
            @*<input id="inputemail" type="text" class="wpcf7-form-control inputText form-control dr-ltr" aria-required="true" aria-invalid="true">
            <label for="inputemail" class="">آدرس ایمیل*</label>
            <span class="field-validation-valid">لطفا آدرس ایمیل خود را وارد کنید</span>*@
            
            
            @Html.TextBoxFor(x => x.Email, new { id = "inputemail", @class = "wpcf7-form-control inputText form-control dr-ltr"})
            <label for="inputemail" class="">*@ResourceLocalization.GetResource(() => Resource.Email)</label>
            @Html.ValidationMessageFor(x => x.Email)
        </div>
        <div class="input-field col-md-12 col-xs-12 col-sm-12">
            @*<textarea id="textarea11" class="wpcf7-form-control inputArea materialize-textarea form-control" style="border: 1px solid #9e9e9e; height: 70px; "></textarea>
            <label for="textarea11" class="">متن پیام شما...</label>*@
            
            @Html.TextAreaFor(x => x.Desc, new { id = "textarea11", @class = "wpcf7-form-control inputArea materialize-textarea form-control" , style = "border: 1px solid #9e9e9e; height: 70px; "})
            <label for="textarea11" class="">@ResourceLocalization.GetResource(() => Resource.Message)...</label>
            @Html.ValidationMessageFor(x => x.Desc)
        </div>
    </div>

    <div class="col-md-4 col-xs-12 col-sm-4">
        <div id="captcha">
            <div class="input-field">
                @*<input id="input15" type="text" class="wpcf7-form-control inputText form-control  dr-ltr" aria-required="true" aria-invalid="true">
                <label for="input15" class="">عبارت را وارد کنید*</label>
                <span class="field-validation-valid">لطفا کد امنیتی را وارد کنید</span>*@
                @Html.TextBox("captcha", null, new Dictionary<string, object>
                { {"id","input15"},{"data-val", "true"}, {"data-val-required", ResourceLocalization.GetResource(() => Resource.Validation_CaptchaRequired)},
                    {"class", "wpcf7-form-control inputText form-control  dr-ltr"}})
                <label for="input15" class="">*@ResourceLocalization.GetResource(() => Resource.SecurityCode)</label>
                @Html.ValidationMessage("captcha")
            </div>
            <img  id="m_imgCaptchaFooter" title="" alt="" class="img-responsive" style="width:80%;float:right;" onclick="loadCaptcha('m_imgCaptchaFooter');" >
            <p class="d" onclick="loadCaptcha('m_imgCaptchaFooter');"></p>
            <a href="#" class="btn btn-default btn-send" type="button" onclick="SubmitAjaxFormWithModel(this, '#result', '#contactInvisible', '#contactSubmit', 'm_imgCaptcha')">@ResourceLocalization.GetResource(() => Resource.Send)</a>
        </div>
    </div>
</form>






